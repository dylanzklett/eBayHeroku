<div class="background">
	<div class="background-center">
		<h1 class="text-center jumbotron" id="illum">
			<div class="illum">
				Kollector
			</div>
		</h1>
		<% if current_user == nil %>
		<div class="home-form">
			<h2 class="text-center">
				Sign Up:
			</h2>
			<%= form_for @user do |f| %>
				<div class="text-center">
				  <p class="home-form">
					<%=f.label :email %>
				  </p>
				  <p class="home-form">
				  	<%=f.text_field :email %>
				  </p>
				  <%=f.label :password %>
				  <p class="home-form">
				  	<%=f.password_field :password %>
				  </p>
				  <%=f.label "Confirm Password" %>
				  <p class="home-form">
				  	<%=f.password_field :password %>
				  </p>
				  <%= f.submit :Submit%>
				</div>
			<% end %>


			<h2 class="text-center">
				Sign In:
			</h2>
			<div class="text-center">
				<%= form_tag("/sessions", method: "post") do %>
				  <%=label_tag :email %>
				  <p class="home-form">
				  	<%=text_field_tag :email %>
				  </p>
				  <p class="home-form">
				  	<%=label_tag :password %>
				  </p>
				  <p class="home-form">
				  	<%=password_field_tag :password %>
				  </p>
				  <%= submit_tag :Login%>
				<% end %>
			</div>
		<% end %>
		</div>
	<% if current_user %>
		<div class="text-center">
			<h3 class="log-error">
				The sign-up and sign-in page is unavailable becuse there is currently a user logged in. Please log out or return to your profile before continuing.
				<p>
					<%= link_to "Return to Profile", user_path(current_user)%>
					<%=link_to "Log Out", session_path(current_user), method: :delete%>
				</p>
			</h3>
		</div>
	<% end %>
</div>