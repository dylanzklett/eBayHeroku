<div class="edit-bg">
	<h1 class="edit-head">Edit User Account and Settings</h1>

	<%=form_for @user do |f| %>
	<p class="edit-head">
		<%= f.label :email %>
	</p>
		<%=f.text_field :email %>
	<p class="edit-head">
		<%=f.label :password %>
	<p/>
		<%=f.password_field :password %>
	<p>
		<%=f.submit :Update %>
	</p>
	<% end %>

	<h3>
		<%=link_to "Return to Profile", user_path(@user) %>
	</h3>

	<h3>
		<% if @user == current_user %>
	    <%=link_to "Delete Account", user_path(@user), method: :delete, data: { confirm:'Are you sure? This will destroy all collection records associated with this account.'} %>
		<% end %>
	</h3>
</div>